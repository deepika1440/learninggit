public class QuickListItem {

    private final Resource itemResource;

    public QuickListItem(Resource itemResource) {
        this.itemResource = itemResource;
    }

    public String getHeaderPath() {
        return itemResource.getChild("header") != null
            ? itemResource.getPath() + "/header"
            : null;
    }

    public String getIconPath() {
        return itemResource.getChild("icon") != null
            ? itemResource.getPath() + "/icon"
            : null;
    }

    // other fields like URL, target, ariaLabel, etc.
}
